<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:scrollbars="vertical" 
	>

	 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:id="@+id/relativeLayoutTurn">
	    
		    <TextView
		        android:id="@+id/textViewTurn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_marginTop="10dp"
		        android:textStyle="bold"
		        android:text="@string/turn" />

		     <CheckBox
		        android:id="@+id/auto"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="180dp"
		        android:layout_marginTop="10dp"
		        android:text="@string/mode_auto_short" />
		    
		    <ImageButton
		        android:id="@+id/nextTurn"
		        android:layout_width="70dp"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_alignParentTop="true"
		        android:background="#00000000"
		        android:contentDescription="@string/next_turn"
		        android:src="@drawable/start" />
		    
		    <TextView
		        android:id="@+id/textViewStat1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/textViewTurn"
		        android:layout_marginLeft="5dp"
		        android:text="@string/cell_in_life" />
		    
		    <TextView
		        android:id="@+id/textViewStat2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/textViewStat1"
		        android:layout_marginLeft="100dp"
		        android:text="@string/cell_in_life" />
		    
		</RelativeLayout>
		
		<GridView xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/grid_view"
		    android:layout_width="wrap_content"
		    android:layout_height="340dp"
		    android:layout_marginTop="20dp"
		    android:numColumns="16"
		    android:columnWidth="10dp"
		    android:horizontalSpacing="0dp"
		    android:verticalSpacing="0dp"
		    android:gravity="center"
		    android:stretchMode="none"
		    >  
	 
	</GridView>
	
	 <LinearLayout
        android:id="@+id/layoutVirus"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        
        >
		     <ImageButton
				 android:id="@+id/virusA"
				 android:layout_width="40dp"
				 android:layout_height="40dp"
				 android:layout_marginLeft="15dp"
				 android:background="#00000000"
				 android:contentDescription="@string/turn"
				 android:src="@drawable/virus_a" />
		     
		     <ImageButton
				 android:id="@+id/virusB"
				 android:layout_width="40dp"
				 android:layout_height="40dp"
				 android:layout_marginLeft="15dp"
				 android:background="#00000000"
				 android:contentDescription="@string/turn"
				 android:src="@drawable/virus_b" />
		     
		     <ImageButton
				 android:id="@+id/virusC"
				 android:layout_width="40dp"
				 android:layout_height="40dp"
				 android:layout_marginLeft="15dp"
				 android:background="#00000000"
				 android:contentDescription="@string/turn"
				 android:src="@drawable/virus_c" />
		     
		     <ImageButton
				 android:id="@+id/virusD"
				 android:layout_width="40dp"
				 android:layout_height="40dp"
				 android:layout_marginLeft="15dp"
				 android:background="#00000000"
				 android:contentDescription="@string/turn"
				 android:src="@drawable/virus_d" />
		     
		     <ImageButton
				 android:id="@+id/virusE"
				 android:layout_width="40dp"
				 android:layout_height="40dp"
				 android:layout_marginLeft="15dp"
				 android:background="#00000000"
				 android:contentDescription="@string/turn"
				 android:src="@drawable/virus_e" />
     </LinearLayout>
	
	
</LinearLayout>